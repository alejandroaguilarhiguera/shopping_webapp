{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "services/*": ["services/*"],
      "store/*": ["store/*"],
      "utils/*": ["utils/*"],
      "config/*": ["config/*"],
      "types/*": ["types/*"]
    },
    "incremental": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "*.test.ts",
    "*.test.tsx"
  ]
}